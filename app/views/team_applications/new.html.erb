<%= provide(:title, "Join")%>
<p>Find me in app/views/team_applications/new.html.erb</p>

<div class="row">

    <%= form_for(@application, url: join_path) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control' %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :date_of_birth %>
      <%= f.date_field :date_of_birth, class: 'form-control' %>

      <%= f.label :attends_unc %>
      <%= f.check_box :attends_unc, class: 'form-control' %>

      <%= f.label :github_url %>
      <%= f.url_field :github_url, class: 'form-control' %>

      <%= f.label :linkedin_url %>
      <%= f.url_field :linkedin_url, class: 'form-control' %>
      
      <%= f.label :website_url %>
      <%= f.url_field :website_url, class: 'form-control' %>

      <%= f.label :resume %>
      <%= f.file_field :resume, class: 'form-control' %>

      <%= f.label :cover_letter %>
      <%= f.text_area :cover_letter, class: 'form-control' %>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %> 

</div>
