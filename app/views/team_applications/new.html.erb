<%= provide(:title, "Join")%>
<h1>Join Our Team</h1>

<p>Find me in app/views/team_applications/new.html.erb</p>

<div class="row">

    <%= form_for(@application, url: join_path) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control' %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :date_of_birth %>
      <%= f.date_field :date_of_birth, class: 'form-control' %>

      <%= f.label "Current UNC student?" %>
      <%= f.check_box :attends_unc, class: 'form-control' %>

      <%= f.label "GitHub URL" %>
      <%= f.url_field :github_url, class: 'form-control', placeholder: 'Optional' %>

      <%= f.label "LinkedIn URL" %>
      <%= f.url_field :linkedin_url, class: 'form-control', placeholder: 'Optional' %>
      
      <%= f.label "Personal website URL" %>
      <%= f.url_field :website_url, class: 'form-control', placeholder: 'Optional' %>

      <%= f.label "Resume (pdf, doc, docx)" %>
      <%= f.file_field :resume, class: 'form-control', accept: '.doc, .docx, .pdf'  %>

      <%= f.label :cover_letter %>
      <%= f.text_area :cover_letter, class: 'form-control', rows: '10' %>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %> 

</div>
